{{#if resume.education}}
    <div class="education-container container-block">
        <h2 class="container-block-title">Education</h2>
        {{#resume.education}}
            <div class="item">
                <h4 class="degree">{{award studyType}}, {{area}}</h4>
                <div class="indent">
                    <h5 class="meta">{{institution}}</h5>
                    <div class="time">{{formatDate startDate}} - {{formatDate endDate}}</div>
                </div>
            </div><!--//item-->
        {{/resume.education}}
    </div><!--//education-container-->
{{/if}}